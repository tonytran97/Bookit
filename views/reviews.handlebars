  <div class="card mt-3 mx-auto card-custom" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
            <img
        src={{cover}}
        class="card-img-top"
        alt="Cover picture of {{title}}"
      />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title text-center">{{title}}</h5>
        <h6 class="card-title text-center">Author: {{author}}</h6>
        <p class="card-text text-center">{{summary}}</p>
      </div>
    </div>
  </div>
</div>
{{#each reviews as |review|}}
{{> review-posts}}
{{/each}}
  <div class="card mt-3 mx-auto card-custom" style="max-width: 540px;">
      <div class="card-body">
        <h5 class="card-title text-center">Username of Review Creator Here</h5>
        <h6 class="card-title text-center">Date Review was created</h6>
        <p class="card-text text-center">User's Review Here</p>
      </div>
    </div>
  </div>
</div>