  <div class="card mt-3 mx-auto card-custom" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
            <img
        src={{book.cover}}
        class="card-img-top"
        alt="Cover picture of {{book.title}}"
      />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title text-center">{{book.title}}</h5>
        <h6 class="card-title text-center">Author: {{book.author}}</h6>
        <p class="card-text text-center">{{book.summary}}</p>
        <a href="/newreview"><button>Add New Review</button></a>
      </div>
    </div>
  </div>
</div>
{{#each book.reviews}}
{{> review-posts}}
{{else}}
<div class="card mt-3 mx-auto card-custom" style="max-width: 540px;">
      <div class="card-body">
  <h5 class="card-title text-center">No current reviews, be the first to add one</h5>
      </div>
    </div>
{{/each}}
<script src="/js/votes.js"></script>
